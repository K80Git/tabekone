<a class="btn" href="/">投稿一覧へ戻る</a>
<%= form_with(model: @review, local: true) do |form| %>
  <div class= "formcont">
    <h3 class="toukou">レビュー</h3>
    <div class ="reanswer">
      <div class="field">
        <div class = "question">
          お店の名前
        </div>
        <div class ="answer">
          <%= form.text_field :shopName, placeholder: "ショップ名" %><br>
        </div>
      </div>
            
      <div class="field">
        <div class = "question">
          料理名
        </div>
        <div class ="answer">
          <%= form.text_field :menuName, placeholder: "メニュー名" %><br>
        </div>
      </div>
            
      <div class="field">
        <div class = "question">
          料理の種類
        </div>
        <div class ="answer">
          <%= form.text_field :kind, placeholder: "料理の種類" %><br>
        </div>
      </div>
            
      <div class="field">
        <div class = "question">
          シチュエーション
        </div>
        <div class ="answer">
          <%= form.text_field :situation, placeholder: "（例）昼食、夜食、飲み会 など" %><br>
        </div>
      </div>

      <div class="field">
        <div class = "question">
          美味しさ
        </div>
        <div class ="answer">
          <%= form.radio_button :deliciousness, :"1" %>
          <label for="deliciousness">美味しくない</label>
          <%= form.radio_button :deliciousness, :"2" %>
          <label for="deliciousness">やや美味しくない</label>
          <%= form.radio_button :deliciousness, :"3" %>
          <label for="deliciousness">普通</label>
          <%= form.radio_button :deliciousness, :"4" %>
          <label for="deliciousness">やや美味しい</label>
          <%= form.radio_button :deliciousness, :"5" %>
          <label for="deliciousness">美味しい</label>
        </div>
      </div>

      <div class="field">
        <div class = "question">
          コストパフォーマンス
        </div>
        <div class ="answer">
          <%= form.radio_button :costPerformance, :"1" %>
          <label for="costPerformance">低い</label>
          <%= form.radio_button :costPerformance, :"2" %>
          <label for="costPerformance">やや低い</label>
          <%= form.radio_button :costPerformance, :"3" %>
          <label for="costPerformance">普通</label>
          <%= form.radio_button :costPerformance, :"4" %>
          <label for="costPerformance">やや高い</label>
          <%= form.radio_button :costPerformance, :"5" %>
          <label for="costPerformance">高い</label>
        </div>
      </div>
            

      <div class="field">
        <div class = "question">
          甘さ・辛さ
        </div>
        <div class ="answer">
          <%= form.radio_button :sweetness, :"1" %>
          <label for="sweetness">より甘く</label>
          <%= form.radio_button :sweetness, :"2" %>
          <label for="sweetness">甘く</label>
          <%= form.radio_button :sweetness, :"3" %>
          <label for="sweetness">ちょうど良い</label>
          <%= form.radio_button :sweetness, :"4" %>
          <label for="sweetness">辛く</label>
          <%= form.radio_button :sweetness, :"5" %>
          <label for="sweetness">より辛く</label>
        </div>
      </div>

      <div class="field">
        <div class = "question">
        濃さ
        </div>
        <div class ="answer">
          <%= form.radio_button :strongTaste, :"1" %>
          <label for="strongTaste">より濃く</label>
          <%= form.radio_button :strongTaste, :"2" %>
          <label for="strongTaste">やや濃く</label>
          <%= form.radio_button :strongTaste, :"3" %>
          <label for="strongTaste">ちょうど良い</label>
          <%= form.radio_button :strongTaste, :"4" %>
          <label for="strongTaste">やや薄く</label>
          <%= form.radio_button :strongTaste, :"5" %>
          <label for="strongTaste">より薄く</label>
        </div>
      </div>

      <div class="field">
        <div class = "question">
          食感
        </div>
        <div class ="answer">
          <%= form.radio_button :Texture, :"1" %>
          <label for="Texture">良い</label>
          <%= form.radio_button :Texture, :"2" %>
          <label for="Texture">普通</label>
          <%= form.radio_button :Texture, :"3" %>
          <label for="Texture">悪い</label>
        </div>
      </div>
            
      <div class="field">
        <div class = "question">
          食べやすさ
        </div>
        <div class ="answer">
          <%= form.radio_button :EaseOfEating, :"1" %>
          <label for="EaseOfEating">良い</label>
          <%= form.radio_button :EaseOfEating, :"2" %>
          <label for="EaseOfEating">普通</label>
          <%= form.radio_button :EaseOfEating, :"3" %>
          <label for="EaseOfEating">悪い</label>
        </div>
      </div>      

      <div class="field">
        <div class = "question">
          量
        </div>
        <div class ="answer">
          <%= form.radio_button :volume, :"1" %>
          <label for="volume">多い</label>
          <%= form.radio_button :volume, :"2" %>
          <label for="volume">普通</label>
          <%= form.radio_button :volume, :"3" %>
          <label for="volume">少ない</label>
        </div>
      </div>

      <div class="field">
        <div class = "question">
          見た目
        </div>
        <div class ="answer">
          <%= form.radio_button :appearance, :"1" %>
          <label for="appearance">良い</label>
          <%= form.radio_button :appearance, :"2" %>
          <label for="appearance">普通</label>
          <%= form.radio_button :appearance, :"3" %>
          <label for="appearance">悪い</label>
        </div>
      </div>

      <div class="field">
        <div class = "question">
          バランス
        </div>
        <div class ="answer">
          <%= form.radio_button :balance, :"1" %>
          <label for="balance">良い</label>
          <%= form.radio_button :balance, :"2" %>
          <label for="balance">普通</label>
          <%= form.radio_button :balance, :"3" %>
          <label for="balance">悪い</label>
        </div>
      </div>

      <div class="field">
        <div class = "question">
          食い合わせ
        </div>
        <div class ="answer">
          <%= form.radio_button :disagreement, :"1" %>
          <label for="disagreement">良い</label>
          <%= form.radio_button :disagreement, :"2" %>
          <label for="disagreement">普通</label>
          <%= form.radio_button :disagreement, :"3" %>
          <label for="disagreement">悪い</label>
        </div>
      </div>      

      <div class="field">
        <div class = "question">
          コメント
        </div>
        <div class ="answer">
          <%= form.text_area :comment, placeholder: "コメント" %><br>
        </div>
      </div>
        <%= form.submit "送信" %>
    </div>
  </div>
<% end %>

